.data

str: .space 17
.text

li $v0, 8
li $a1, 17									#read string
la $a0, str
syscall

li $t1, 0        						# i = 0
la $t0, str

start_loop:
		
		lb  $a0, 0($t0)   
  	beqz $a0, end_loop 			# == beq $a0, $zero, end_loop 
  	
  	addi $t0, $t0, 1				#next char
		addi $t1, $t1, 1    		# i +=1
  	  
  	j start_loop
end_loop:

li   $v0,1									#print result
subi  $a0, $t1, 1						#afairo 1 pshfio logo \n
syscall

li $v0, 10									#end program
syscall